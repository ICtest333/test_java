package com.basic;

class ATM implements Runnable{
	private long depositeMoney = 10000;//공유자원
	
	@Override
	public void run() {
		
		
	}
	
	//임계영역
	public void withDraw(long howMuch){
		if(depositeMoney>0){
			depositeMoney -= howMuch;
			System.out.println(Thread.currentThread().getName()+", "+depositeMoney);
		}else{

		}
	}
}

